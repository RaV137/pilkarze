<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:labelTextSize">10sp</item>
    </style>

    <style name="PreferencesTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:labelTextSize">10sp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="android:textColorSecondary">@color/textColor</item>
        <item name="android:panelBackground">@color/darkBackground</item>
    </style>

    <style name="StatsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:labelTextSize">10sp</item>
    </style>

</resources>
